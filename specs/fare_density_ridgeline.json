{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Ridgeline-style density plots showing fare distribution from high-cost origin stations.",
  "width": 600,
  "data": {
    "url": "data/fare_long.csv"
  },
  "params": [
    {
      "name": "FareCutoff",
      "value": 4.0,
      "bind": {
        "input": "range",
        "min": 2.0,
        "max": 7.5,
        "step": 0.1,
        "name": "Highlight fares \u2264 RM: "
      }
    }
  ],
  "transform": [
    {
      "filter": {
        "field": "origin",
        "oneOf": [
          "Stadium Kajang",
          "Sungai Jernih",
          "Kampung Selamat",
          "Kajang",
          "Batu 11 Cheras",
          "Kwasa Damansara"
        ]
      }
    },
    {
      "density": "fare",
      "groupby": [
        "origin"
      ],
      "bandwidth": 0.15,
      "extent": [
        1.5,
        7.5
      ],
      "counts": false,
      "as": [
        "fare_value",
        "density"
      ]
    }
  ],
  "facet": {
    "row": {
      "field": "origin",
      "type": "nominal",
      "title": null,
      "header": {
        "labelAngle": 0,
        "labelAlign": "left",
        "labelPadding": -5,
        "labelFontSize": 12
      }
    }
  },
  "spec": {
    "width": 560,
    "height": 80,
    "layer": [
      {
        "mark": {
          "type": "area",
          "orient": "vertical",
          "color": "#9ecae1",
          "opacity": 0.65
        },
        "encoding": {
          "x": {
            "field": "fare_value",
            "type": "quantitative",
            "title": "Fare (RM)",
            "axis": {
              "tickCount": 6
            }
          },
          "y": {
            "field": "density",
            "type": "quantitative",
            "title": null,
            "axis": {
              "values": [
                0,
                0.3
              ],
              "grid": false,
              "ticks": false,
              "labels": false
            }
          }
        }
      },
      {
        "transform": [
          {
            "filter": "datum.fare_value <= FareCutoff"
          }
        ],
        "mark": {
          "type": "area",
          "orient": "vertical",
          "color": "#08519c",
          "opacity": 0.85
        },
        "encoding": {
          "x": {
            "field": "fare_value",
            "type": "quantitative"
          },
          "y": {
            "field": "density",
            "type": "quantitative"
          }
        }
      },
      {
        "transform": [
          {
            "calculate": "FareCutoff",
            "as": "threshold"
          }
        ],
        "mark": {
          "type": "rule",
          "color": "#d94801",
          "strokeWidth": 2,
          "strokeDash": [
            6,
            4
          ]
        },
        "encoding": {
          "x": {
            "field": "threshold",
            "type": "quantitative"
          }
        }
      }
    ]
  },
  "resolve": {
    "scale": {
      "y": "independent"
    }
  },
  "config": {
    "view": {
      "stroke": null
    }
  }
}
